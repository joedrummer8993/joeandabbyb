@import 'nib'
@import 'jeet'
global-reset()

primary-color = #a0d2a1
secondary-color = #dadada
t-color-2 = #6EA06F
canvas = #eceeec
body
    max-width 100%
    span(1)
    background-color canvas
    font-family: 'Raleway', sans-serif;
    font-size: 16px
header
    background-color primary-color
    span(1)
	
#nav
    width 100%
    color t-color-2
#nav li
    column(1/5 1, gutter: .5)
    margin-top 10px
    display block
    text-align center
banner
	background-color primary-color
	span(1)
.bannerimage
    center(1600px)
    width 100%
.floatingShape
    position fixed
    border-radius 50%
    width 75px
    height 75px
    box-shadow 3px 3px 10px #888888
    background-color #ca797d
    color white
    text-align center
    line-height 75px
    top 30px
    right 30px
    z-index 55
.floatingShape :hover
    border-radius 50%
    box-shadow 3px 3px 10px #585858
.floatingShape :active
    border-radius 50%
    box-shadow 1px 1px 3px #585858
.eventDetails
	width 100%
	center(1600px)

.detailsCard
    margin 10px
    column(1/3, cycle: 3)
    background-color white
    box-shadow 1px 1px 5px #888888
    @media screen and (max-width: 600px)
        column(1, uncycle: 3, cycle: 1)
.detailsCardHead
    position relative
    float left
    height 70px
    width 100%
    line-height 70px
    background-color #ca797d
    color white
    margin 0
.detailsCardBody
    float left
    width 100%
    margin 15px auto
    position relative
.detailsCard h3
	text-align center
	font-size 26px
	margin 5px
.detailsCard h4
	text-align center
	font-size 23px
	margin 20px
.detailsCard p
	text-align center
.cardimage
    float left
    margin auto
    width 100%
    height auto
footer
    font-size 12px
    center(100%)
    text-align center
    background-color grey
	
