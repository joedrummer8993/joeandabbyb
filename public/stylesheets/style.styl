@import 'nib'
@import 'jeet'
global-reset()

primary-color = #a0d2a1
t-color-2 = #6EA06F
body
    max-width 100%
    span(1)
header
    background-color primary-color
    span(1)
	
#nav
    width 100%
    color t-color-2
#nav li
    column(1/5 1, gutter: .5)
    margin-top 10px
    display block
    text-align center
banner
	background-color primary-color
	span(1)
.bannerimage
    center(1600px)
    width 100%
.eventDetails

	width 100%
	center(1600px)
.detailsCard p
	text-align center
.detailsCard
	column(1/3, cycle: 3)
	
	@media screen and (max-width: 600px)
		column(1, uncycle: 3, cycle: 1)
	
footer
    font-size 12px
    center(100%)
    text-align center
    background-color grey
