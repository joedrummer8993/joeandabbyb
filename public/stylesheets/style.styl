@import 'nib'
@import 'jeet'
global-reset()

primary-color = #a0d2a1
secondary-color = #dadada
t-color-2 = #6EA06F
body
    max-width 100%
    span(1)
header
    background-color primary-color
    span(1)
	
#nav
    width 100%
    color t-color-2
#nav li
    column(1/5 1, gutter: .5)
    margin-top 10px
    display block
    text-align center
banner
	background-color primary-color
	span(1)
.bannerimage
    center(1600px)
    width 100%
.eventDetails
	width 100%
	center(1600px)

.detailsCard
    margin 10px
    column(1/3, cycle: 3)
    background-color secondary-color
    @media screen and (max-width: 600px)
        column(1, uncycle: 3, cycle: 1)

.detailsCard h3
	text-align center
	font-size 26px
	margin 5px
.detailsCard h4
	text-align center
	font-size 23px
	margin 20px
.detailsCard p
	text-align center
.cardimage
    display block
    margin auto
    width 100%
footer
    font-size 12px
    center(100%)
    text-align center
    background-color grey
	
